<div class="dashboard">
  <header>
    <div>
      <a href="/admin-dashboard" class="uppercase btn-link btn"
        ><i class="fas fa-arrow-left icon"></i>Back To Dashboard</a
      >
    </div>
    <div class="header">
      <span>Admin</span>
      <a class="uppercase logout-link" href="/admin/logout">Logout</a>
    </div>
  </header>
  <aside>
    <div class="brand">
      <h1>Conti-<span>Procure</span></h1>
    </div>
    <div class="nav">
      <ul>
        <li>
          <i class="fas fa-tachometer-alt icon"></i
          ><a href="/admin-dashboard">Dashboard</a>
        </li>
        <li>
          <i class="fas fa-clipboard-list  icon"></i
          ><a href="/admin-dashboard/queue">Request Queue</a>
        </li>
        <li>
          <i class="fas fa-check-circle  icon"></i
          ><a href="/admin-dashboard/approved">Approved Request</a>
        </li>
        <li>
          <i class="fas fa-quote-right  icon"></i><a href="/admin-dashboard/quotations">Quotations</a>
        </li>
      </ul>
    </div>
  </aside>
  <main>
    <form id="postData"  class="p-15 rfq-form-1">
      <div class="header mb-15">
        <h3>Request For Quotation</h3>
      </div>
      <div class="form-grid">
        <div class="form">
          <label for="rfq_number">RFQ Number</label>
          <br />
          <input type="text" name="rfq_number" id="rfq_number" placeholder="" />
        </div>
        <div class="form">
          <label for="employee_name">Employee Name</label>
          <br />
          <input
            type="text"
            name="employee_name"
            id="employee_name"
            placeholder=""
          />
        </div>
        <div class="form">
          <label for="rfq_date">RFQ Date Created</label>
          <br />
          <input type="date" name="rfq_date" id="rfq_date" placeholder="" />
        </div>
        <div class="form">
          <label for="rfq_desc">RFQ Description</label>
          <br />
          <textarea name="rfq_desc" id="rfq_desc"></textarea>
        </div>
        <div class="form">
          <label for="rfq_condition">RFQ Condition</label>
          <br />
          <textarea name="rfq_condition" id="rfq_condition"></textarea>
        </div>
        <div class="form">
          <label for="rfq_date_close">RFQ Closing Date</label>
          <br />
          <input
            type="date"
            name="rfq_date_close"
            id="rfq_date_close"
            placeholder=""
          />
        </div>
      </div>
      <div class="header mt-15 mb-15">
        <h3>Request Item</h3>
      </div>
      <div class="form-grid">
        <div class="form">
          <label for="rfq_item_id">RFQ Item Id</label>
          <br />
          <input
            type="text"
            name="rfq_item_id"
            id="rfq_item_id"
            placeholder=""
          />
        </div>
        <div class="form">
          <label for="rfq_item_amount">RFQ Item Qty</label>
          <br />
          <input
            type="number"
            name="rfq_item_amount"
            id="rfq_item_amount"
            placeholder=""
          />
        </div>
        <div class="form">
          <label for="rfq_item_desc">RFQ Item Description</label>
          <br />
          <textarea name="rfq_item_desc" id="rfq_item_desc"></textarea>
        </div>
      </div>
      <button type="submit" class="btn red">Submit</button>
    </form>
  </main>
</div>
