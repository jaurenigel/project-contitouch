<div class="app--container">
  <div class="app--wrapper">
    <!-- image goes here -->
    <div class="image">
      <img src="/assets/images/user1.svg" alt="" />
    </div>
    <h3 class="uppercase">Login to continue</h3>
    <form action="/admin/login" method="POST">
      <div class="app--form">
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Email"
          required
        />
      </div>
      <div class="app--form">
        <input
          type="password"
          name="password"
          placeholder="Password"
          id=""
          required
        />
      </div>
      <button type="submit">Login</button>
    </form>

    <div class="app--options">
      <ul>
        <li><a href="/admin/register">Don't have an account? Create</a></li>
      </ul>
    </div>
  </div>
</div>
