<div class="app--container">
  <div class="app--wrapper">
    <h3 class="uppercase pt-15">Register to continue</h3>
    <form action="/admin/register" method="POST">
      <div class="app--form">
        <input
          type="name"
          name="name"
          id="name"
          placeholder="full name"
          required
        />
      </div>
      <div class="app--form">
        <input
          type="email"
          name="email"
          id="email"
          placeholder="email"
          required
        />
      </div>
      <div class="app--form">
          <input
            type="password"
            name="password"
            placeholder="password"
            id=""
            required
          />
        </div>
      <div class="app--form">
        <input
          type="password"
          name="password2"
          id="password2"
          placeholder="repeat password"
          required
        />
      </div>
      <button type="submit">Register</button>
    </form>

    <div class="app--options">
      <ul>
        <li><a href="/admin/login">Login as Admin</a></li>
        <li><a href="/supplier/register">Create as a Supplier</a></li>
      </ul>
    </div>
  </div>
</div>
