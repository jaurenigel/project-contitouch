<div class="app--container">
  <div class="app--wrapper">
    <h3 class="uppercase pt-15">Register to continue</h3>
    <form action="/admin/register" method="POST">
      <div class="app--form">
        <input
          type="name"
          name="name"
          id="name"
          placeholder="Company Name"
          required
        />
      </div>
      <div class="app--form">
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Email"
          required
        />
      </div>
      <div class="app--form">
       <span class="pr-15"> Account Type</span>
        <select name="type">
          <option value="buyer">Buyer</option>
          <option value="supplier">Supplier</option>
        </select> 
      </div>
      <div class="app--form">
          <input
            type="password"
            name="password"
            placeholder="Password"
            id=""
            required
          />
        </div>
      <div class="app--form">
        <input
          type="password"
          name="password2"
          id="password2"
          placeholder="Repeat Password"
          required
        />
      </div>
      <button type="submit">Register</button>
    </form>

    <div class="app--options">
      <ul>
        <li><a href="/admin/login">Have an Account? Login</a></li>
      </ul>
    </div>
  </div>
</div>
